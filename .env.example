# ─── Donna .env — copy to .env and fill in real values ───────────────────────
# NEVER commit the real .env file to version control.

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-opus-4-6

# Picovoice (get free key at console.picovoice.ai)
PICOVOICE_ACCESS_KEY=...
WAKE_WORD_MODEL_PATH=./hey_donna.ppn
WAKE_WORD_SENSITIVITY=0.5

# Google OAuth (download from Google Cloud Console → OAuth 2.0 credentials)
GOOGLE_CREDENTIALS_PATH=./credentials.json
GOOGLE_TOKEN_PATH=./token.json

# User identity
USER_NAME=Your Name

# STT — "small" or "medium"; device "cpu" or "cuda"
WHISPER_MODEL_SIZE=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# TTS
TTS_VOICE=bf_emma
TTS_SPEED=0.95

# VAD
VAD_MODE=3
VAD_SILENCE_FRAMES=25

# LLM context budget
LLM_MAX_HISTORY_TOKENS=70000
LLM_MAX_HISTORY_MESSAGES=100

# Session grouping: "daily" or "launch"
SESSION_MODE=daily

# Scheduler
MEETING_PREP_MINUTES=30

# UI
WINDOW_ALWAYS_ON_TOP=true
WINDOW_WIDTH=480
WINDOW_HEIGHT=320
WINDOW_OPACITY=0.95
